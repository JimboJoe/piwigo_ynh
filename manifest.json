{
    "name": "Piwigo",
    "id": "piwigo",
    "packaging_format": 1,
    "description": {
        "en": "Open source photo gallery for the web",
        "fr": "Galerie de photos open source pour le web"
    },
    "version": "11.3.0~ynh2",
    "url": "http://piwigo.org",
    "license": "GPL-2.0",
    "maintainer": {
        "name": "JimboJoe",
        "email": "jimmy@monin.net",
        "url": ""
    },
    "requirements": {
    "yunohost": ">= 4.1.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/piwigo",
                "default": "/piwigo"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "homer"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["de", "en", "es", "fr", "it", "pt"],
                "default": "en"
             }
        ]
    }
}
