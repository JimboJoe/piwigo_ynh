{
    "name": "Piwigo",
    "id": "piwigo",
    "packaging_format": 1,
    "description": {
        "en": "photo gallery",
        "fr": "Galerie photo"
    },
    "version": "2.10.0~ynh1",
    "url": "http://piwigo.org",
    "license": "GPL-2.0",
    "maintainer": {
        "name": "JimboJoe",
        "email": "jimmy@monin.net",
        "url": ""
    },
    "requirements": {
    "yunohost": ">= 3.5.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.0-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Piwigo",
                    "fr": "Choisissez un nom de domaine pour Piwigo"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Piwigo",
                    "fr": "Choisissez un chemin pour Piwigo"
                },
                "example": "/piwigo",
                "default": "/piwigo"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l'administrateur"
                },
                "example": "homer"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "en"
             }
        ]
    }
}
